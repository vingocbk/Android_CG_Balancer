<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@mipmap/background_3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgDataSavedFragmentBackground"
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:background="@mipmap/background_3"
        android:scaleType="fitXY"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
    <ImageView
        android:id="@+id/imgBackFragmentDataSaved"
        android:background="@mipmap/icon_back"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <ImageView
        android:layout_alignParentEnd="true"
        android:id="@+id/imgLoadDataSettingLocal"
        android:background="@mipmap/get_setting"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <ListView
        android:id="@+id/lvDataSaved"
        android:layout_below="@+id/imgBackFragmentDataSaved"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>